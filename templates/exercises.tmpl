                            id="openModal">


                            <div class="textbox-container flex items-center justify-between w-full max-w-md">
                                <input type="text" id="textboxExerciseRemove"
                                    class="border border-gray-300 rounded-lg p-3 w-2/3 focus:outline-none focus:ring-2 focus:ring-lightblue-500"
                                    placeholder="Insert exercise name to delete" />
                                <button onclick="removeExercise()" id="remove-button"
                                    class="bg-red-600 text-white px-6 py-3 rounded-lg ml-4 hover:bg-red-700 transition">Remove</button>
                            </div>
                        </div>


                        <!-- Modal------------------------------- -->
                        <div id="modal"
                            class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50 hidden">
                            <!-- Modal Content -->
                            <div class="bg-lightblue-100 rounded-2xl p-6 w-96">
                                <h2 class="text-xl font-semibold text-center text-black mb-4">Upload Image and Enter
                                    Details</h2>

                                <!-- Image Upload -->
                                <div class="mb-4 flex flex-col items-center">
                                    <label class="cursor-pointer bg-gray-200 rounded-lg p-2 w-full text-center">
                                        <input type="file" accept="image/png" class="hidden" id="imgUpload" required
                                            onchange="handleImageUpload(event)">
                                        Upload PNG
                                    </label>
                                    <p class="mt-2 text-sm text-gray-600">Image will be resized to fit.</p>
                                </div>

                                <!-- Name Input -->
                                <div class="mb-4 text-black">
                                    <label for="name" class="block text-sm font-medium text-black">Name:</label>
                                    <input type="text" id="name"
                                        class="mt-1 p-2 border border-gray-300 rounded-md w-full"
                                        placeholder="Enter name" required>
                                </div>

                                <!-- KG Input -->
                                <div class="mb-4 text-black">
                                    <label for="currentWeight" class="block text-sm font-medium text-black">Current
                                        KG:</label>
                                    <input type="number" id="currentWeight"
                                        class="mt-1 p-2 border border-gray-300 rounded-md w-full"
                                        placeholder="Enter current weight" required>
